{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true,
    "jasmine": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "plugin:react/recommended",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "globals": {},
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "prettier",
    "react-hooks"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "import/named": 0,
    "import/order": 1,
    "import/no-duplicates": 0,
    "import/no-unresolved": 0,
    "react/display-name": 0,
    "react/prop-types": 0,
    "react/self-closing-comp": 2,
    "react/jsx-uses-react": 0, // React v17の暫定対応
    "react/react-in-jsx-scope": 0, // React v17の暫定対応
    "prettier/prettier": 2,
    "@typescript-eslint/no-unused-vars": 2,
    "@typescript-eslint/semi": [
      2,
      "never"
    ],
    "@typescript-eslint/type-annotation-spacing": [
      2,
      {
        "before": true,
        "after": true,
        "overrides": {
          "colon": {
            "before": false,
            "after": true
          }
        }
      }
    ],
    "spaced-comment": [
      2,
      "always"
    ],
    "eqeqeq": [
      2,
      "always",
      {
        "null": "ignore"
      }
    ],
    "no-var": 2,
    "no-eval": 2,
    "no-redeclare": 2,
    "no-alert": 2,
    "no-console": 2,
    "no-debugger": 2,
    "no-unused-vars": 0,
    "no-restricted-imports": [
      2,
      {
        "patterns": [
          "../../"
        ]
      }
    ],
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1
  }
}
